-- FUNCTIONS
local function Fmt(n)
    if n >= 1e18 then return string.format("%.2fQu", n / 1e18)
    elseif n >= 1e15 then return string.format("%.2fQd", n / 1e15)
    elseif n >= 1e12 then return string.format("%.2fT", n / 1e12)
    elseif n >= 1e9 then return string.format("%.2fB", n / 1e9)
    elseif n >= 1e6 then return string.format("%.2fM", n / 1e6)
    elseif n >= 1e3 then return string.format("%.2fK", n / 1e3)
    else return tostring(math.floor(n)) end
end

local function Update()
    TrainLbl.Text = "🎯 Trains: " .. Fmt(Stats.Trains)
    GainsLbl.Text = "💎 Gains: " .. Fmt(Stats.TotalGains)
end

-- HOOK SEMUA BINDABLEFUNCTION DI TRAINSYSTEM
task.spawn(function()
    wait(2) -- Tunggu game load
    
    local trainSystem = ReplicatedStorage:FindFirstChild("TrainSystem")
    if trainSystem then
        local bindableFolder = trainSystem:FindFirstChild("Bindable")
        if bindableFolder then
            for _, bindable in pairs(bindableFolder:GetChildren()) do
                if bindable:IsA("BindableFunction") then
                    local originalInvoke = bindable.Invoke
                    
                    bindable.Invoke = function(self, ...)
                        local args = {...}
                        local results = {originalInvoke(self, ...)}
                        
                        if Config.Enabled then
                            -- Multiply semua number returns
                            for i = 1, #results do
                                if type(results[i]) == "number" and results[i] > 0 then
                                    local original = results[i]
                                    results[i] = results[i] * Config.Multiplier
                                    Stats.TotalGains = Stats.TotalGains + (results[i] - original)
                                    
                                    print(string.format("🔥 %s: %s → %s (x%s)", 
                                        bindable.Name, Fmt(original), Fmt(results[i]), Fmt(Config.Multiplier)))
                                end
                            end
                        end
                        
                        return unpack(results)
                    end
                    
                    print("✅ Hooked:", bindable.Name)
                end
            end
        end
    end
end)

-- HOOK __namecall untuk RemoteFunction
local oldNamecall
oldNamecall = hookmetamethod(game, "__namecall", function(self, ...)
    local method = getnamecallmethod()
    local args = {...}
    
    if method == "InvokeServer" and Config.Enabled then
        -- Multiply args untuk training remotes
        local name = tostring(self)
        if name:find("Train") or name:find("Apply") then
            for i = 1, #args do
                if type(args[i]) == "number" and args[i] > 0 and args[i] < 1e10 then
                    args[i] = args[i] * Config.Multiplier
                end
            end
        end
        
        local results = {pcall(oldNamecall, self, unpack(args))}
        local success = table.remove(results, 1)
        
        if success and Config.Enabled then
            -- Multiply returns
            for i = 1, #results do
                if type(results[i]) == "number" and results[i] > 0 and results[i] < 1e15 then
                    local original = results[i]
                    results[i] = results[i] * Config.Multiplier
                    Stats.TotalGains = Stats.TotalGains + (results[i] - original)
                end
            end
        end
        
        if success then
            return unpack(results)
        end
    end
    
    return oldNamecall(self, ...)
end)

-- AUTO TRAIN
task.spawn(function()
    while wait(Config.TrainDelay) do
        if Config.Enabled and Config.AutoTrain then
            pcall(function()
                local trainEquip = ReplicatedStorage:FindFirstChild("TrainEquipment")
                if trainEquip then
                    local remote = trainEquip:FindFirstChild("Remote")
                    if remote then
                        local stationary = remote:FindFirstChild("ApplyStationaryTrain")
                        if stationary then
                            stationary:InvokeServer()
                        end
                        
                        wait(0.1)
                        
                        local mobile = remote:FindFirstChild("ApplyMobileTrain")
                        if mobile then
                            mobile:InvokeServer()
                        end
                        
                        wait(0.1)
                        
                        local binding = remote:FindFirstChild("ApplyBindingTrainingEffect")
                        if binding then
                            binding:InvokeServer("Training_2001", "Emit_2")
                        end
                        
                        wait(0.1)
                        
                        local boost = remote:FindFirstChild("ApplyBindingTrainingBoostEffect")
                        if boost then
                            boost:InvokeServer()
                        end
                        
                        Stats.Trains = Stats.Trains + 1
                    end
                end
            end)
        end
    end
end)

-- Update display
task.spawn(function()
    while wait(1) do
        Update()
    end
end)

-- EVENTS
MinBtn.MouseButton1Click:Connect(function()
    Frame.Visible = false
    MinFrame.Visible = true
end)

RestoreBtn.MouseButton1Click:Connect(function()
    Frame.Visible = true
    MinFrame.Visible = false
end)

CloseBtn.MouseButton1Click:Connect(function()
    Config.Enabled = false
    Config.AutoTrain = false
    ScreenGui:Destroy()
end)

MultInput.FocusLost:Connect(function()
    local val = tonumber(MultInput.Text)
    if val and val >= 1 then
        Config.Multiplier = math.floor(val)
        MultInput.Text = tostring(Config.Multiplier)
    else
        MultInput.Text = tostring(Config.Multiplier)
    end
end)

ActivateBtn.MouseButton1Click:Connect(function()
    Config.Enabled = not Config.Enabled
    
    if Config.Enabled then
        ActivateBtn.BackgroundColor3 = Color3.fromRGB(50, 255, 100)
        ActivateBtn.Text = "✅ ACTIVE"
        StatusLbl.Text = "🟢 ACTIVE - x" .. Fmt(Config.Multiplier)
        StatusLbl.TextColor3 = Color3.fromRGB(100, 255, 100)
        MinStatus.Text = "🟢 ON"
        MinStatus.TextColor3 = Color3.fromRGB(100, 255, 100)
    else
        ActivateBtn.BackgroundColor3 = Color3.fromRGB(50, 150, 255)
        ActivateBtn.Text = "🚀 ACTIVATE"
        StatusLbl.Text = "⚪ Status: OFF"
        StatusLbl.TextColor3 = Color3.fromRGB(200, 200, 200)
        MinStatus.Text = "⚪ OFF"
        MinStatus.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

AutoBtn.MouseButton1Click:Connect(function()
    Config.AutoTrain = not Config.AutoTrain
    
    if Config.AutoTrain then
        AutoBtn.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
        AutoBtn.Text = "🤖 AUTO TRAIN: ON"
    else
        AutoBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
        AutoBtn.Text = "🤖 AUTO TRAIN: OFF"
    end
end)

print("✅ Training Multiplier Loaded!")
print("📝 Waiting 2s for game to load...")
print("🔥 Hook all BindableFunctions in TrainSystem")
print("💡 Check console (F9) for hook confirmations")
